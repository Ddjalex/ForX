RewriteEngine On
RewriteBase /

# ----------------------------------------------------
# Do not rewrite existing files or directories
# ----------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ----------------------------------------------------
# Route EVERYTHING (including /api/...) through index.php
# ----------------------------------------------------
RewriteRule ^ index.php [L,QSA]

# Assets fix (only if assets are inside /public/assets/)
RewriteRule ^assets/(.*)$ public/assets/$1 [L,NC]
RewriteRule ^assets$ public/assets [L,NC]

# Cache Control Headers
<IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</IfModule>
